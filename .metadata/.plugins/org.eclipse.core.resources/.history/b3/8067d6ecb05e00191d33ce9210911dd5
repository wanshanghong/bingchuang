<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 写Sql语句  patientId;
	private double temp;
	private Date date;
	private int patientId;
	private String patientName;
	private String patientSex;
	private int patientAge;
	private String patientIdcard;
	private String patientAddress;
	private int patientPhone; -->
<mapper namespace="cn.bingchuang.mapper.PatientMapper">

	<!-- 插入温度 -->
	<insert id="addtemperature"  parameterType="cn.bingchuang.pojo.Temperature">
		insert into temperature(patient_id,temp,date)
		values (#{patientId},#{temp},#{date})
	</insert>
	<!-- 查找病人全部温度信息(byId) -->
	<select id="selectalltemperaturebyId" parameterType="Integer"
		resultType="cn.bingchuang.pojo.Temperature">
		select * from temperature where patient_id =#{patientId}
	</select>
	<!--  Pressure {
	private int patientId;
	private double pressureData;
	private Date pressureTime; -->
	
	<!-- 添加压力 -->
	<insert id="insertpressure"  parameterType="cn.bingchuang.pojo.Pressure">
		insert into pressure(patient_id,pressure_data,pressure_time)
		values (#{patientId},#{pressureData},#{pressureTime})
	</insert>
	<!-- 查找病人全部压力信息(byId) -->
	<select id="selectallpressurebyId" parameterType="Integer"
		resultType="cn.bingchuang.pojo.Pressure">
		select * from pressure where patient_id =#{patientId}
	</select>
	
	<!-- 插入震动数据 -->
	<insert id="insertvibration"  parameterType="cn.bingchuang.pojo.Vibration">
		insert into vibration(patient_id,vibration_data,vibration_time)
		values (#{patientId},#{vibrationData},#{vibrationTime})
	</insert>
	
	<!-- 查找全部病人震动数据 -->
	<select id="selectallvibration" parameterType="Integer"
		resultType="cn.bingchuang.pojo.Vibration">
		select * from vibration where patient_id =#{patientId}
	</select>
	
	
	<!-- 添加病人 -->
	<insert id="addpatient"  parameterType="cn.bingchuang.pojo.Patient">
		insert into patient(patient_id,patient_name,patient_sex,patient_age,patient_idcard,patient_address,patient_phone,patient_photo)
		values (#{patientId},#{patientName},#{patientSex},#{patientAge},#{patientIdcard},#{patientAddress},#{patientPhone},#{patientPhoto})
	</insert>
	
	<!-- 修改病人 -->
	<update id="updatepatient"  parameterType="cn.bingchuang.pojo.Patient">
		update  patient set patient_name=#{patientName},patient_sex=#{patientSex},
							patient_age=#{patientAge},patient_idcard=#{patientIdcard},patient_address=#{patientAddress},
							patient_phone=#{patientPhone},patient_photo=#{patientPhoto} where patient_id=#{patientId}
	</update>
	
	<!-- 通过ID找病人 -->
	<select id="findpatientbypatientId" parameterType="Integer"
		resultType="cn.bingchuang.pojo.Patient">
		select * from patient where patient_id=#{patientId}
	</select>
	
	<!-- 查找全部病人 -->
	<select id="findpatientallpatient" 
		resultType="cn.bingchuang.pojo.Patient">
		select * from patient
	</select>
	
	<!-- 通过ID删除病人 -->
	<delete id="deletepatientbypatientId" parameterType="Integer">
		 delete from patient where patient_id=#{patientId}
	</delete>
	
	<!-- 删除所有病人 -->
	<delete id="deletepatientallpatient" parameterType="Integer">
		 delete from patient
	</delete>
	
	<!-- 
	class Vibration {
	private int patientId;         //病人ID
	private double vibrationData;	//病人震动数据
	private Date vibrationTime;		//震动时间 -->
	
</mapper>