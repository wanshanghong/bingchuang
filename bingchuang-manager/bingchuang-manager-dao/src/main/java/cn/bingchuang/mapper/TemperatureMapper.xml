<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.bingchuang.mapper.TemperatureMapper">
	<!-- 插入温度 -->
	<insert id="addtemperature"  parameterType="cn.bingchuang.pojo.Temperature">
		insert into temperature(patient_id,temp,date)
		values (#{patientId},#{temp},#{date})
	</insert>
	<!-- 查找病人全部温度信息(byId) -->
	<select id="selectalltemperaturebyId" parameterType="Integer"
		resultType="cn.bingchuang.pojo.Temperature">
		select * from temperature where patient_id =#{patientId}
	</select>
	<!-- 查询最新的一条温度信息(byId) -->
	<select id="selectOnetemperaturebyId" parameterType="Integer"
	resultType="cn.bingchuang.pojo.Temperature">
	 	SELECT * FROM temperature WHERE temperature.patient_id=#{patientId} ORDER BY temperature.date DESC LIMIT 1
	 </select>
</mapper>