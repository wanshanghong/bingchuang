<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.bingchuang.mapper.PressureMapper">
	<!--  Pressure {
	private int patientId;
	private double pressureData;
	private Date pressureTime; -->
	
	<!-- 添加压力 -->
	<insert id="insertpressure"  parameterType="cn.bingchuang.pojo.Pressure">
		insert into pressure(patient_id,pressure_data,pressure_time)
		values (#{patientId},#{pressureData},#{pressureTime})
	</insert>
	<!-- 查找病人全部压力信息(byId) -->
	<select id="selectallpressurebyId" parameterType="Integer"
		resultType="cn.bingchuang.pojo.Pressure">
		select * from pressure where patient_id =#{patientId}
	</select>
	<!-- 查询最新的一条压力信息(byId) -->
	<select id="selectOnepressurebyId" parameterType="Integer"
	resultType="cn.bingchuang.pojo.Pressure">
	 	SELECT * FROM pressure WHERE pressure.patient_id=#{patientId} ORDER BY pressure.pressure_data DESC LIMIT 1
	 </select>
</mapper>